{
  "server": {
    "port": 5000,
    "logLevel": "info",
    "maxLogAge": 30,
    "corsEnabled": true,
    "sessionSecret": "fhirhub-secret-key-change-me"
  },
  "database": {
    "type": "sqlite",
    "path": "./data/fhirhub.db"
  },
  "converter": {
    "fhirVersion": "R4",
    "defaultLocale": "fr",
    "validateOutputs": true,
    "useFrenchAdaptation": true,
    "cleanEmptyFields": true
  },
  "api": {
    "requireApiKey": true,
    "defaultKey": "dev-key",
    "keyExpirationDays": 365,
    "rateLimit": {
      "enabled": true,
      "maxRequests": 100,
      "timeWindow": 60000
    }
  },
  "directories": {
    "uploads": "./data/uploads",
    "hl7Input": "./data/in",
    "fhirOutput": "./data/out"
  },
  "french": {
    "useOfflineMode": true,
    "preferredSystems": [
      "TRE-R316-AutreCategorieEtablissement",
      "TRE-R51-DESCGroupe2Diplome",
      "TRE-G02-TypeProduit",
      "TRE-R217-ProtectionJuridique",
      "TRE-R239-PublicPrisEnCharge",
      "TRE-A01-CadreExercice"
    ]
  }
}